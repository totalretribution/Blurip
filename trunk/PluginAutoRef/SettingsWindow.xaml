<Window x:Class="BluRip.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoRef settings" Height="126" Width="257" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="12,0,0,12" Name="buttonOk" Width="75" Height="23" VerticalAlignment="Bottom" IsDefault="True" Click="buttonOk_Click" />
        <CheckBox Content="Activated" Height="16" HorizontalAlignment="Left" Margin="12,12,0,0" Name="checkBoxActivated" VerticalAlignment="Top" Checked="checkBoxActivated_Checked" Unchecked="checkBoxActivated_Checked" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" IsDefault="True" Margin="93,0,0,12" Name="buttonCancel" VerticalAlignment="Bottom" Width="75" IsCancel="True" />
    </Grid>
</Window>
