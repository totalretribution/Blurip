        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LinkWindow" Height="300" Width="300" Icon="/BluRip;component/Blu-ray.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Cursor="Hand">
        <Button Content="{DynamicResource ButtonOk}" HorizontalAlignment="Left" Margin="12,0,0,12" Name="buttonOk" Width="75" Height="23" VerticalAlignment="Bottom" IsDefault="True" Click="buttonOk_Click" />
        <Label Content="Label" HorizontalAlignment="Left" Margin="30,32,0,0" Name="label1" VerticalAlignment="Top" Foreground="Blue" FontWeight="Bold" />
    </Grid>
</Window>
